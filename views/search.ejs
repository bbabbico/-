    <header>
        <div id="notice">
            <p>해당 페이지에서 검색할 수 있는 화장품은 관리자 데이터 베이스에 저장된 항목만 포함합니다</p>
        </div>
        <div id="search">
            <div id="search_box">
                <!--검색 인덱스 조건 선택-->
                <select id="select_type"> 
                    <option>품명</option>
                    <option>제작회사</option>
                    <option>종류</option>
                    <option>성분</option>
                </select>

                <!--검색값 입력-->
                <input type="text" id="input_searche_value" placeholder="검색어를 입력하시오.">
                <!--검색 실행-->
                <button id="불러오기" onclick="검색요청()">검색</button>
                <button id="모두삭제" onclick="모두삭제()">삭제</button>
            </div>
        </div>
    </header>

    <section> 
        <p id="count"></p>
        <div id="indicate">
            <table id="container">
                <thead>
                    <tr>
                        <td>사진(올리브영)</td>
                        <td>품명</td>
                        <td>제작회사</td>
                        <td>화장품 종류</td>
                        <td>전성분</td>
                        <td>저장소에 저장</td>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </section>

